<div>
	<form {{action "saveChatbox" on='submit'}}>
		<div class="field">
			<label>What is your <strong>email address</strong>?</label>
			{{input type="email" value=session.agent.email}}
		</div>
		
		<div class="field">
			<label>Do you want to change your password?</label>
			{{input type="checkbox" checked=change_password}}
		</div>		
		
		{{#if change_password}}
			<div class="field">
				<label>What is your <strong>CURRENT</strong> password (blank to keep your current password)?</label>
				{{input type="password" value=current_password}}
			</div>
		
			<div class="field">
				<label>What is your new <strong>NEW</strong> password (blank to keep your current password)?</label>
				{{input type="password" value=new_password}}
			</div>
		{{/if}}

		<button type="submit" class="full_width">Save My Profile</button>
	</form>
	
	<br><button {{action "signinout"}} class="gray">Sign Out</button>
</div>