<div>
	<p>Introducers are the things that go crazy and crazier. Triggers are the things that go crazy and crazier. Triggers are the things that go crazy and crazier.</p>

	<table class="table introducers">
		<thead>
			<tr>
				<th>Active</th>
				<th>Required</th>
				<th>Name</th>
				<th>Permalink</th>
				<th>Type</th>
				<th>Validator</th>
				<th>Reorder</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			{{#each chatbox.settings.introducers itemController="admin/settings/introducers/introducer"}}
				<tr>
					<td>{{input type="checkbox" checked=active}}</td>
					<td>{{input type="checkbox" checked=required}}</td>
					<td>{{input value=name focus-out="saveChatbox"}}</td>
					<td>{{input value=permalink focus-out="saveChatbox"}}</td>
					<td>{{input value=type focus-out="saveChatbox"}}</td>
					<td>{{input value=validator focus-out="saveChatbox"}}</td>
					<td>{{input value=priority focus-out="saveChatbox"}}</td>
					<td>
						<button class="fluid_width small gray red_hover" {{action 'deleteIntroducer' .}}>
							<i class="fa fa-trash"></i>
						</button>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>

	<div class="upper_space">
		<button {{action 'createIntroducer'}}>Add Introducer</button>
	</div>
</div>